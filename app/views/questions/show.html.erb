<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@question.body) %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @question.tags %>
</p>

<%= render './answers/form', answer: @answer, question: @question %>


  <% @answers.each do |a| %>
  <div class="answer_body"> <%= a.body %>
    <button type="submit" name="submit">Correct Answer</button>
  </div>
  <% end %>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
