<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@question.body) %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @question.tags %>
</p>

<%= render './answers/form', answer: @answer, question: @question %>

<p> <%= @answers.to_json %> </p>

<ul>
  <% @answers.each do |a| %>
  <li> <%= a.body %> </li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
