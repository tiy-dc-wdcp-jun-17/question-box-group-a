<!DOCTYPE html>
<html>
  <head>
    <title>QuestionBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href= '/questions'>Team Aye Question Box</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li> <%= link_to 'Add Question', new_question_path %> </li>
            <li> <%= link_to 'Sign Up', new_users_path %> </li>
            <li> <%= link_to 'Tags', tags_path %> </li>


          </ul>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search Tags">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
          <%= render './search/form' %>
          <ul class="nav navbar-nav navbar-right">
            <li>
            <% if current_user %>
              <%= link_to("Logout", session_path, method: :delete) %>
            <% else %>
              <%= link_to("Login", new_session_path) %>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
